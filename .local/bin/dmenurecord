#!/bin/sh

# Usage:
# `$0`: Ask for recording type via dmenu
# `$0 screencast`: Record both audio and screen (microphone)
# `$0 video`: Record only screen (with microphone)
# `$0 audio`: Record only audio (microphone)
# `$0 kill`: Kill existing recording
#
# If there is already a running instance, user will be prompted to end it.

getdim() { xrandr | grep -oP '(?<=current ).*(?=,)' | tr -d ' ' ;}

updateicon() { \
	echo "$1" > /tmp/recordingicon
	pkill -RTMIN+9 "${STATUSBAR:-dwmblocks}"
	}

killrecording() {
	recpid="$(cat /tmp/recordingpid)"
	kill -15 "$recpid"
	rm -f /tmp/recordingpid
	updateicon ""
	pkill -RTMIN+9 "${STATUSBAR:-dwmblocks}"
	}

screencast() { \
	ffmpeg -y \
	-f x11grab \
	-framerate 30 \
	-s "$(getdim)" \
	-i "$DISPLAY" \
	-r 24 \
	-use_wallclock_as_timestamps 1 \
	$AUDIO_OPT \
 	-c:v libx264 \
	-crf 0 -preset ultrafast -c:a aac \
	"$HOME/screencast-$(date '+%y%m%d-%H%M-%S').mp4" &
	echo $! > /tmp/recordingpid
	updateicon "‚è∫Ô∏èüéôÔ∏è"
       	}

video() { \
	ffmpeg -y \
	-f x11grab \
	-framerate 30 \
	-s "$(getdim)" \
	-i "$DISPLAY" \
	-r 24 \
	-use_wallclock_as_timestamps 1 \
	$AUDIO_OPT \
 	-c:v libx264 \
	-crf 0 -preset ultrafast -c:a aac \
	"$HOME/video-$(date '+%y%m%d-%H%M-%S').mp4" &
	echo $! > /tmp/recordingpid
	updateicon "‚è∫Ô∏èüéôÔ∏è"
	}

webcamhidef() { ffmpeg \
	-f v4l2 \
	-i /dev/video0 \
	-video_size 1920x1080 \
	"$HOME/webcam-$(date '+%y%m%d-%H%M-%S').mkv" &
	echo $! > /tmp/recordingpid
	updateicon "üé•"
	}

webcam() { ffmpeg \
	-f v4l2 \
	-i /dev/video0 \
	-video_size 640x480 \
	"$HOME/webcam-$(date '+%y%m%d-%H%M-%S').mkv" &
	echo $! > /tmp/recordingpid
	updateicon "üé•"
	}


audio() { \
	ffmpeg \
	$AUDIO_OPT \
	-c:a flac \
	"$HOME/audio-$(date '+%y%m%d-%H%M-%S').flac" &
	echo $! > /tmp/recordingpid
	updateicon "üéôÔ∏è"
	}

askrecording() { \
	choice=$(printf "screencast\\nvideo\\nvideo selected\\naudio\\nwebcam\\nwebcam (hi-def)" | dmenu -i -p "Select recording style:")
	if [ "$choice" != "webcam" ] && [ "$choice" != "webcam (hi-def)" ]; then
		audiochoice=$(printf "microphone\\nsystem" | dmenu -i -p "Select audio source:")
		if [ "$audiochoice" = "microphone" ]; then
			AUDIO_OPT="-f alsa -ac 2 -thread_queue_size 1024 -i default"
		else
			if ! command -v pactl >/dev/null 2>&1; then
				echo "Error: pactl not found. Install pulseaudio-utils to record system audio." >&2
				exit 1
			fi
			sink=$(pactl get-default-sink)
			if [ -z "$sink" ]; then
				echo "Error: No default sink found." >&2
				exit 1
			fi
			AUDIO_OPT="-f pulse -ac 2 -thread_queue_size 1024 -i ${sink}.monitor"
		fi
	else
		AUDIO_OPT=""
	fi
	case "$choice" in
		screencast) screencast;;
		audio) audio;;
		video) video;;
		*selected) videoselected;;
		webcam) webcam;;
		"webcam (hi-def)") webcamhidef;;
	esac
	}

asktoend() { \
	response=$(printf "No\\nYes" | dmenu -i -p "Recording still active. End recording?") &&
	[ "$response" = "Yes" ] &&  killrecording
	}

videoselected()
{
	slop -f "%x %y %w %h" > /tmp/slop
	read -r X Y W H < /tmp/slop
	rm /tmp/slop

	ffmpeg -y \
	-f x11grab \
	-framerate 30 \
	-video_size "$W"x"$H" \
	-i :0.0+"$X,$Y" \
	-r 24 \
	-use_wallclock_as_timestamps 1 \
	$AUDIO_OPT \
 	-c:v libx264 \
	-crf 0 -preset ultrafast -c:a aac \
	"$HOME/box-$(date '+%y%m%d-%H%M-%S').mp4" &
	echo $! > /tmp/recordingpid
	updateicon "‚è∫Ô∏èüéôÔ∏è"
}

case "$1" in
	screencast) AUDIO_OPT="-f alsa -ac 2 -thread_queue_size 1024 -i default"; screencast;;
	audio) AUDIO_OPT="-f alsa -ac 2 -thread_queue_size 1024 -i default"; audio;;
	video) AUDIO_OPT="-f alsa -ac 2 -thread_queue_size 1024 -i default"; video;;
	*selected) AUDIO_OPT="-f alsa -ac 2 -thread_queue_size 1024 -i default"; videoselected;;
	kill) killrecording;;
	*) ([ -f /tmp/recordingpid ] && asktoend && exit) || askrecording;;
esac
